.page {
  min-height: 100vh;
  background: #e8f4ed;
  padding: 48rpx 32rpx 80rpx;
  display: flex;
  flex-direction: column;
}

.top-bar {
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3a2f;
}

.subtitle {
  font-size: 24rpx;
  color: #6b7568;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 24rpx;
}

.card {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
}

.card image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.footer {
  margin-top: 32rpx;
  text-align: center;
  font-size: 24rpx;
  color: #7b8679;
}
