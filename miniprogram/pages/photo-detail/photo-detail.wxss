/* photo-detail.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: #000000;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 顶部指示条 */
.top-indicator {
  position: absolute;
  top: 24rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  z-index: 200;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 48rpx;
  right: 32rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.4);
  z-index: 200;
}

.close-btn .icon {
  font-size: 32rpx;
  font-weight: normal;
}

/* 图片容器 */
.photo-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 背景渐变 */
.background-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, #1a1a1a 0%, #000000 100%);
  z-index: 1;
}

/* Swiper */
.photo-swiper {
  width: 100%;
  height: 100%;
  z-index: 10;
}

.swiper-item-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.full-image {
  width: 100%;
  height: 100%;
  max-height: 90vh;
}

/* 图片计数器 */
.counter {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 12rpx 32rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  z-index: 100;
}
