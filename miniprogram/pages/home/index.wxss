.page {
  min-height: 100vh;
  height: 100vh;
  background: #eef5ff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}


.top-shell {
  padding: 120rpx 40rpx 32rpx;
  padding-top: calc(120rpx + constant(safe-area-inset-top));
  padding-top: calc(120rpx + env(safe-area-inset-top));
  background: linear-gradient(180deg, #eef5ff 0%, #ffffff 100%);
  box-shadow: 0 20rpx 60rpx rgba(17, 26, 44, 0.08);
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
}



.city-row {
  display: flex;
  align-items: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #111a2c;
  margin-bottom: 24rpx;
}

.chevron {
  margin-left: 12rpx;
  font-size: 32rpx;
  color: #8593a3;
}

.search-box {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 999rpx;
  padding: 12rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(17, 26, 44, 0.05);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #293244;
}

.filter-row {
  display: flex;
  margin-top: 20rpx;
  white-space: nowrap;
  gap: 12rpx;
}

.filter-chip {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  border: 1px solid #dde3ed;
  font-size: 24rpx;
  color: #6b7787;
  min-height: 22rpx;
}


.filter-chip.active {
  background: #111a2c;
  color: #ffffff;
  border-color: #111a2c;
}

.map-section {
  flex: 1;
  position: relative;
  min-height: 0;
  height: 100%;
}

.map {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.card-panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 32rpx 32rpx;
}


.card-swiper {
  height: 440rpx;
  overflow: visible;
}


.location-card {
  background: #ffffff;
  border-radius: 36rpx;
  padding: 28rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card-header {
  display: flex;
  gap: 24rpx;
}

.thumbnail {
  width: 176rpx;
  height: 176rpx;
  border-radius: 24rpx;
}

.card-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111a2c;
}

.rating {
  font-size: 24rpx;
  color: #8b95a7;
  margin-top: 10rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  background: #f2f5fb;
  border-radius: 16rpx;
  color: #4c5b71;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #4c5b71;
  font-size: 26rpx;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #50b15d;
}

.status .dot {
  width: 12rpx;
  height: 12rpx;
  background: #50b15d;
  border-radius: 50%;
  margin-right: 10rpx;
}

button.primary {
  background: #1677ff;
  color: #ffffff;
  border-radius: 999rpx;
  font-size: 26rpx;
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
}
