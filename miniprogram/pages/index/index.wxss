/* index.wxss */
.container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.map {
  width: 100%;
  height: 100%;
}

.map-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(232, 245, 233, 0.3) 0%, rgba(187, 222, 251, 0.3) 100%);
  pointer-events: none;
}

/* 顶部搜索栏 */
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 48rpx 32rpx 16rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,0.9) 0%, rgba(255,255,255,0.6) 60%, transparent 100%);
  z-index: 100;
}

.search-container {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.city-selector {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(0,0,0,0.05);
  height: 80rpx;
  padding: 0 24rpx;
  border-radius: 16rpx;
}

.city-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.icon-arrow {
  font-size: 24rpx;
  color: #666;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(0,0,0,0.05);
  height: 80rpx;
  padding: 0 24rpx;
  border-radius: 16rpx;
}

.icon-search {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 分类标签 */
.category-scroll {
  white-space: nowrap;
  padding-bottom: 8rpx;
}

.category-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  height: 64rpx;
  padding: 0 24rpx;
  margin-right: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.05);
  border: 1rpx solid rgba(0,0,0,0.05);
  border-radius: 16rpx;
  font-size: 24rpx;
}

.category-item.filter-btn {
  color: #333;
}

.category-item.active {
  background: #2094f3;
  box-shadow: 0 4rpx 24rpx rgba(32, 148, 243, 0.2);
  color: white;
}

.category-icon {
  font-size: 28rpx;
}

.category-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 定位按钮 */
.location-btn {
  position: fixed;
  right: 32rpx;
  bottom: 480rpx;
  width: 80rpx;
  height: 80rpx;
  background: white;
  box-shadow: 0 4rpx 32rpx rgba(0,0,0,0.08);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 50;
}

.icon-location {
  font-size: 40rpx;
}

/* 底部地点卡片 */
.place-card {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -8rpx 40rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  padding-bottom: 64rpx;
  z-index: 100;
  transform: translateY(120%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.place-card.show {
  transform: translateY(0);
}

.card-content {
  display: flex;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.card-image-container {
  position: relative;
  width: 192rpx;
  height: 192rpx;
  flex-shrink: 0;
}

.card-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.card-rating {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: rgba(0,0,0,0.4);
  backdrop-filter: blur(10rpx);
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 20rpx;
  color: white;
}

.star-icon {
  font-size: 20rpx;
}

.rating-text {
  font-size: 20rpx;
  font-weight: 500;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
}

.card-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  margin-top: 12rpx;
}

.tag {
  background: #E3F2FD;
  color: #2094f3;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.card-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #999;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.location-icon {
  font-size: 28rpx;
}

.navigate-btn {
  width: 100%;
  height: 88rpx;
  background: #2094f3;
  color: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(32, 148, 243, 0.2);
  border: none;
  padding: 0;
}

.navigate-btn::after {
  border: none;
}

.nav-icon {
  font-size: 32rpx;
}

.nav-text {
  font-size: 28rpx;
  font-weight: bold;
}
