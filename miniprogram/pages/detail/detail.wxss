/* detail.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background: white;
  position: relative;
  padding-bottom: 160rpx;
}

/* 顶部图片区域 */
.header-section {
  position: relative;
  width: 100%;
  height: 42vh;
  background: #f5f5f5;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.header-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, transparent 30%, rgba(0,0,0,0.1) 100%);
  pointer-events: none;
  z-index: 1;
}

/* 导航栏 */
.nav-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 48rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  pointer-events: none;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  pointer-events: auto;
}

.nav-btn .icon {
  font-size: 40rpx;
  font-weight: bold;
}

.nav-actions {
  display: flex;
  gap: 24rpx;
}

/* 轮播控制按钮 */
.swiper-controls {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx;
  z-index: 50;
  pointer-events: none;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  pointer-events: auto;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 图片计数器 */
.image-counter {
  position: absolute;
  bottom: 80rpx;
  right: 32rpx;
  padding: 8rpx 24rpx;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  gap: 8rpx;
  z-index: 50;
}

.image-counter .icon {
  font-size: 28rpx;
}

/* 内容区域 */
.content-section {
  position: relative;
  margin-top: -48rpx;
  background: white;
  border-radius: 48rpx 48rpx 0 0;
  padding: 64rpx 48rpx 80rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.05);
  z-index: 2;
}

.drag-indicator {
  width: 80rpx;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 8rpx;
  margin: 0 auto 48rpx;
}

/* 标题区域 */
.title-section {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
  display: block;
  margin-bottom: 16rpx;
}

.rating-row {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.star-icon {
  font-size: 36rpx;
}

.rating-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.divider {
  color: #ddd;
  font-size: 28rpx;
}

.reviews-text {
  color: #999;
  font-size: 28rpx;
}

/* 标签 */
.tags-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 64rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: #E3F2FD;
  color: #2094f3;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.tag-icon {
  font-size: 28rpx;
}

/* 信息列表 */
.info-list {
  margin-bottom: 48rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
  padding: 32rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.info-item:first-child {
  border-top: none;
}

.info-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.info-icon-wrapper.address-icon {
  background: #E3F2FD;
}

.info-icon-wrapper.time-icon {
  background: #F3E5F5;
}

.info-icon-wrapper.phone-icon {
  background: #FFF3E0;
}

.info-icon {
  font-size: 32rpx;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.info-sub {
  font-size: 24rpx;
  color: #999;
}

.time-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-badge {
  font-size: 20rpx;
  font-weight: bold;
  color: #4CAF50;
  background: #E8F5E9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid #C8E6C9;
}

.arrow-icon {
  font-size: 32rpx;
  color: #ddd;
  align-self: center;
}

.arrow-icon.collapse {
  font-size: 24rpx;
}

.call-btn {
  font-size: 24rpx;
  font-weight: 500;
  color: #2094f3;
  border: 1rpx solid rgba(32, 148, 243, 0.3);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  align-self: center;
}

/* 描述区域 */
.description-section,
.facilities-section {
  padding: 48rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.title-indicator {
  width: 8rpx;
  height: 40rpx;
  background: #2094f3;
  border-radius: 8rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.expand-btn {
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
}

.expand-text {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
}

/* 设施网格 */
.facilities-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.facility-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 24rpx;
}

.facility-icon {
  font-size: 40rpx;
}

.facility-text {
  font-size: 20rpx;
  color: #666;
}

.bottom-placeholder {
  height: 64rpx;
}

/* 底部操作栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  padding: 24rpx 48rpx 48rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.footer-actions {
  display: flex;
  align-items: center;
  gap: 48rpx;
  margin-right: 16rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  color: #666;
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 20rpx;
  font-weight: 500;
}

.navigate-btn {
  flex: 1;
  background: #2094f3;
  color: white;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(32, 148, 243, 0.2);
  border: none;
  padding: 0;
}

.navigate-btn::after {
  border: none;
}

.nav-icon {
  font-size: 36rpx;
}

.nav-text {
  font-size: 28rpx;
  font-weight: bold;
}
