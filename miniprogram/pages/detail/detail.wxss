/* pages/detail/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  padding-bottom: 120rpx;
}

.header {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2d8cfe;
  flex: 1;
}

.copy-btn {
  padding: 12rpx 24rpx;
  background: #2d8cfe;
  color: white;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.info-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.info-content {
  flex: 1;
  padding-right: 20rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.value {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  word-break: break-all;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  gap: 20rpx;
}

.nav-btn {
  flex: 1;
  background: #2d8cfe;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn {
  flex: 1;
  background: #f0f0f0;
  color: #333;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}