<!-- pages/detail/detail.wxml -->
<view class="container">
  <!-- 标题：大字+宝宝图标 -->
  <view class="header">
    <text class="title">{{park.name}}</text>
    <image class="baby-icon" src="/images/baby-icon.png" mode="widthFix"></image>
  </view>

  <!-- 适合年龄：核心痛点！ -->
  <view class="info-item">
    <text class="label">适合年龄：</text>
    <text class="value">{{park.suitableAge}}</text>
  </view>

  <!-- 关键设施：一眼看懂有什么 -->
  <view class="info-item">
    <text class="label">关键设施：</text>
    <text class="value">{{park.facilities}}</text>
  </view>

  <!-- 开放时间：避免白跑一趟 -->
  <view class="info-item">
    <text class="label">开放时间：</text>
    <text class="value">8:00-22:00</text>
  </view>

  <!-- 地址：精准定位 -->
  <view class="info-item">
    <text class="label">地址：</text>
    <text class="value">{{park.address}}</text>
  </view>

  <!-- 底部导航：只保留"返回" -->
  <view class="footer">
    <button class="back-btn" bindtap="goBack">返回地图</button>
  </view>
</view>