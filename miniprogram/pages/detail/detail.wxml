<!-- pages/detail/detail.wxml -->
<view class="container">
  <!-- 标题 -->
  <view class="header">
    <text class="title">{{park.name}}</text>
    <text class="copy-btn" bindtap="copyText" data-text="{{park.name}}">复制</text>
  </view>

  <!-- 适合年龄 -->
  <view class="info-item" wx:if="{{park.suitableAge}}">
    <view class="info-content">
      <text class="label">适合年龄：</text>
      <text class="value">{{park.suitableAge}}</text>
    </view>
  </view>

  <!-- 关键设施 -->
  <view class="info-item" wx:if="{{park.facilities}}">
    <view class="info-content">
      <text class="label">关键设施：</text>
      <text class="value">{{park.facilities}}</text>
    </view>
  </view>

  <!-- 开放时间 -->
  <view class="info-item" wx:if="{{park.openTime}}">
    <view class="info-content">
      <text class="label">开放时间：</text>
      <text class="value">{{park.openTime}}</text>
    </view>
  </view>

  <!-- 地址 -->
  <view class="info-item" wx:if="{{park.address}}">
    <view class="info-content">
      <text class="label">地址：</text>
      <text class="value">{{park.address}}</text>
    </view>
    <text class="copy-btn" bindtap="copyText" data-text="{{park.address}}">复制</text>
  </view>

  <!-- 描述 -->
  <view class="info-item" wx:if="{{park.description}}">
    <view class="info-content">
      <text class="label">简介：</text>
      <text class="value">{{park.description}}</text>
    </view>
  </view>

  <!-- 底部按钮 -->
  <view class="footer">
    <button class="nav-btn" bindtap="navigateToPark">导航</button>
    <button class="back-btn" bindtap="goBack">返回</button>
  </view>
</view>