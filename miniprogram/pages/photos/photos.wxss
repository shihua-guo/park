/* photos.wxss */
.container {
  min-height: 100vh;
  background: #E8F5E9;
}

/* 顶部导航栏 */
.nav-bar {
  position: sticky;
  top: 0;
  background: rgba(232, 245, 233, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 48rpx 32rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
  z-index: 100;
}

.nav-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  color: #333;
}

.nav-btn .icon {
  font-size: 48rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 1rpx;
}

/* 图片容器 */
.photos-container {
  padding: 24rpx;
}

/* 瀑布流布局 */
.waterfall {
  display: flex;
  gap: 24rpx;
}

.column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.photo-item {
  position: relative;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.photo-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
  transition: background 0.3s ease;
  pointer-events: none;
}

.photo-item:active::after {
  background: rgba(0, 0, 0, 0.1);
}

.photo-image {
  width: 100%;
  display: block;
}

/* 底部提示 */
.end-tip {
  margin-top: 64rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  opacity: 0.4;
}

.tip-line {
  width: 64rpx;
  height: 1rpx;
  background: #999;
}

.tip-text {
  font-size: 20rpx;
  color: #999;
}
