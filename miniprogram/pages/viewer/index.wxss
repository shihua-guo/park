.page {
  width: 100vw;
  height: 100vh;
  background: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.full-image {
  width: 100%;
  height: 100%;
}

.close-btn {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.4);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.hint {
  position: absolute;
  bottom: 60rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}
